{
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "printWidth": 100,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^~/config/(.*)$",
    "^~/lib/(.*)$",
    "^~/components/(.*)$",
    "^~/hooks/(.*)$",
    "^~/types/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true
}
